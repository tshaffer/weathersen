{
  "compileOnSave": false,
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es2020",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      },
      "lib": [
          "es2019",
          "dom"
      ],
      "types": [
        "node"
      ]
  },
  "include": [
      "src/**/*"
  ]
}
